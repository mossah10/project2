<apex:page docType="html-5.0" standardController="Appointment__c">
    <apex:form>
        <apex:pageBlock>
            <apex:pageBlockSection>
                <apex:outputLabel value="Select your appointment date" for="date" />
                <apex:inputField id="date" value="{!Appointment__c.AppointmentDate__c}" type="datetime-local" />
                <apex:selectList value="{!Appointment__c.Doctor__c}" multiselect="false" size="1">
                    <apex:selectOptions value="{!users}" />
                </apex:selectList>
            </apex:pageBlockSection>

            <br/>

            <apex:pageBlockButtons location="bottom">
                <apex:commandButton action="{!save}" value="Save" />
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
    <!-- date doctor symptom -->
</apex:page>